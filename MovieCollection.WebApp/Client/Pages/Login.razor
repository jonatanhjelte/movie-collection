@page "/"
@page "/login"
@inherits LoginPageModel

<PageTitle>Index</PageTitle>

<AuthorizeView>
	<Authorized>
		@if (true) NavigationManager.NavigateTo("home");
	</Authorized>

	<NotAuthorized>
		<MudGrid Class="mt-5">
			<MudItem xs="12" md="5" Class="d-flex justify-center align-center">
				<MudImage Src="img/filmkulting.png" Height="200"></MudImage>
			</MudItem>

			<MudItem xs="12" md="5">
				<MudText Class="mt-5 mb-5" Typo="Typo.h5">Get started now</MudText>
				<LoginComponent OnLogin="Login" ErrorMessage="@ErrorMessage" OnTextChanged="ClearErrorMessage"/>
			</MudItem>
			
		</MudGrid>

	</NotAuthorized>
</AuthorizeView>