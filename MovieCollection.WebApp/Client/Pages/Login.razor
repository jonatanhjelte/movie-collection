@page "/"
@page "/login"
@inherits LoginPageModel

<PageTitle>Index</PageTitle>

<AuthorizeView>
	<Authorized>
		@if (true) NavigationManager.NavigateTo("home");
	</Authorized>

	<NotAuthorized>
		<MudGrid>
			<MudItem xs="12" md="6" >
				<MudText Class="mb-5 mt-5" Typo="Typo.h5">Mega Movie Collection</MudText>
				<MudText>- Create lists of all the movies you have seen</MudText>
				<MudText>- Create collections of physical media</MudText>
				<MudText>- Rate movies</MudText>
			</MudItem>
			<MudItem xs="12" md="6">
				<MudText Class="mt-5 mb-5" Typo="Typo.h5">Get started now</MudText>
				<LoginComponent OnLogin="Login" ErrorMessage="@ErrorMessage" OnTextChanged="ClearErrorMessage"/>
			</MudItem>
		</MudGrid>

	</NotAuthorized>
</AuthorizeView>